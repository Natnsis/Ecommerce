
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}
        

// ADMIN TABLE
model Admin {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
}


// CUSTOMER TABLE
model Customer {
  id         Int          @id @default(autoincrement())
  username   String       @unique
  password   String
  fullName   String
  image      String?
  email      String       @unique

  carts        Cart[]
  transactions Transaction[]
}


// VENDOR TABLE
model Vendor {
  id       Int          @id @default(autoincrement())
  username String       @unique
  password String
  image    String?

  products      Product[]
  transactions  Transaction[]
}


// PRODUCTS TABLE
model Product {
  pid      Int      @id @default(autoincrement())
  pname    String
  price    Float
  image    String?
  stock    Int      @default(0)

  Vid      Int
  vendor   Vendor   @relation(fields: [Vid], references: [id])

  carts        Cart[]
  transactions Transaction[]
}


// CARTS TABLE
model Cart {
  id      Int      @id @default(autoincrement())
  user_id Int
  pid     Int
  quantity Int     @default(1)

  customer Customer @relation(fields: [user_id], references: [id])
  product  Product  @relation(fields: [pid], references: [pid])

  @@unique([user_id, pid]) // same product only once per user
}


// TRANSACTIONS TABLE
model Transaction {
  id              Int      @id @default(autoincrement())
  customer_id     Int
  vendor_id       Int
  product_id      Int
  product_name    String
  quantity        Int
  total_price     Float
  transaction_date DateTime @default(now())
  payed           Int        @default(0)  // 0 or 1

  customer Customer @relation(fields: [customer_id], references: [id])
  vendor   Vendor   @relation(fields: [vendor_id], references: [id])
  product  Product  @relation(fields: [product_id], references: [pid])
}
